<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <TextView style="@style/HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/title_text_margin_top"
        android:layout_marginBottom="@dimen/title_header_margin_bot"
        android:layout_marginStart="@dimen/common_indent"
        android:layout_marginEnd="@dimen/common_indent"/>

    <Button style="@style/MainButton"
        android:id="@+id/search_button"
        android:text="@string/search"
        app:icon="@drawable/loop"
        android:layout_marginBottom="@dimen/common_indent"/>

    <Button style="@style/MainButton"
        android:id="@+id/media_library_button"
        android:text="@string/media_library"
        app:icon="@drawable/media"
        android:layout_marginBottom="@dimen/common_indent"/>

    <Button style="@style/MainButton"
        android:id="@+id/settings_button"
        android:text="@string/settings"
        app:icon="@drawable/settings"
        android:layout_marginBottom="28dp"/>

</LinearLayout>
